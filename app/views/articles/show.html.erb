
<h2 class="text-center">
    Title : <%= @article.title %>
</h2>

<div class="well col-xs-8 col-xs-offset-2">
    <h4 class="text-center"><strong>Description</strong></h4>
        <hr>
        <%= @article.description %>

    <div>
        <%= link_to 'Edit This Article',edit_article_path(@article),class:"btn btn-success btn-xs" %>
        <%= link_to 'Delete This Article',article_path(@article),method: :delete,data:{confirm:"are you sure?"},class:"btn btn-danger btn-xs" %>
        <%= link_to 'Index',articles_path,class:"btn btn-primary btn-xs" %>
    </div>
</div>    

